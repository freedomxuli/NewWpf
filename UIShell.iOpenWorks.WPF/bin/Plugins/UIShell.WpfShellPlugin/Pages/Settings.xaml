<UserControl x:Class="UIShell.WpfShellPlugin.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:UIShell.WpfShellPlugin.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Button Margin="2" Click="Button_Click">
                    <DockPanel>
                        <Image Width="15" Height="15" Stretch="Fill" Margin="0" Source="/UIShell.WpfShellPlugin;component/Assets/Exit.png" />
                        <TextBlock VerticalAlignment="center" Margin="2,0,0,0" Text="关闭" />
                    </DockPanel>
                </Button>
                <Label />
            </DockPanel>
            <local:SettingsAppearance />
        </DockPanel>
        
    </Grid>
</UserControl>
